<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".activity.MovieListActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/fh"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/zuo"/>
    <EditText
        android:backgroundTint="@color/cardview_light_background"
        android:textColorHint="#ffffff"
        android:id="@+id/et"
        android:background="@null"
        android:hint="请输入影片名称"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="250dp"
        android:layout_height="@dimen/dp_35" />
    <ImageView
        android:id="@+id/search"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:src="@mipmap/icon_search"
        />
</LinearLayout>
    <com.google.android.material.tabs.TabLayout
        app:tabTextColor="#ffffff"
        android:layout_marginTop="9.6dp"
        android:id="@+id/tablist"
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vplist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>
</LinearLayout>