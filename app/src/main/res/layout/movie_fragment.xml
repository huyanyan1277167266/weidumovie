<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edit_bg">
    <com.amap.api.maps2d.MapView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map"
        android:visibility="gone">
    </com.amap.api.maps2d.MapView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_38"
            android:src="@mipmap/icon_location"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_24" />
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_43"/>
        <ImageView
            android:layout_marginTop="@dimen/dp_41"
            android:layout_marginLeft="@dimen/dp_229"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/icon_search"
            android:id="@+id/search"/>
    </LinearLayout>
    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/xb"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_150"></com.stx.xhb.xbanner.XBanner>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_38">
        <ImageView
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_9"
            android:src="@mipmap/r1"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在热映"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_9"/>
        <TextView
            android:id="@+id/rygd"
            android:textColor="#ffffff"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="202dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_9"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ryrlv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_38">
        <ImageView
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_9"
            android:src="@mipmap/r2"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即将上映"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_9"/>
        <TextView
            android:id="@+id/sygd"
            android:textColor="#ffffff"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="202dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_9"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/syrlv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_38">
        <ImageView
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_9"
            android:src="@mipmap/r3"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门电影"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_9"/>
        <TextView
            android:id="@+id/rmgd"
            android:textColor="#ffffff"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="202dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_9"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rmrlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>

</ScrollView>