<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">
<LinearLayout
    android:background="@mipmap/back"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/dp_0">
    <ImageView
        android:src="@mipmap/shape"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16" />
    <TextView
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_37"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_22"
        android:textSize="@dimen/sp_16"
        android:text="注册"/>
</LinearLayout>
    <LinearLayout
        android:background="#141931"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        >
        <EditText
            android:id="@+id/register_name"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="@drawable/edit_bg"
                android:paddingLeft="@dimen/dp_20"
            style="?android:attr/textViewStyle"
            android:hint="请输入昵称"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44" />
        <EditText
            android:id="@+id/register_email"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="@drawable/edit_bg"
            android:paddingLeft="@dimen/dp_20"
            style="?android:attr/textViewStyle"
            android:hint="请输入邮箱账号"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44" />

       <LinearLayout
           android:background="@drawable/edit_bg"
           style="?android:attr/textViewStyle"
           android:layout_marginTop="@dimen/dp_10"
           android:layout_marginLeft="@dimen/dp_24"
           android:layout_width="@dimen/dp_312"
           android:layout_height="@dimen/dp_44"
           android:orientation="horizontal">
           <EditText
               android:id="@+id/register_pass"
              android:layout_weight="1"
                android:background="@null"
               android:paddingLeft="@dimen/dp_20"

               android:hint="请设置密码"
               android:textColorHint="#ffffff"
               android:layout_width="0dp"
               android:layout_height="match_parent" />
           <ImageView
               android:id="@+id/xx"
               android:layout_width="@dimen/dp_16"
               android:layout_height="@dimen/dp_16"
               android:src="@mipmap/group"
              android:layout_marginTop="@dimen/sp_16"/>
           <ImageView
               android:layout_marginRight="@dimen/dp_20"
               android:layout_marginLeft="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_20"
               android:id="@+id/register_eye"
               android:layout_width="@dimen/dp_14"
               android:layout_height="@dimen/dp_8"
               android:background="@mipmap/yanjing"

               />
       </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_24"
        >
        <EditText
            android:id="@+id/register_code"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:background="@drawable/edit_bg"
            android:paddingLeft="@dimen/dp_20"
            style="?android:attr/textViewStyle"
            android:hint="请输入验证码"
            android:textColorHint="#ffffff"
            
            />
        <Button
            android:id="@+id/register_hq"
            android:layout_width="@dimen/dp_96"
            android:text="获取验证码"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"/>
    </LinearLayout>

        <TextView
            android:id="@+id/register_login"
            android:layout_marginTop="@dimen/dp_12"
            android:text="已有账号立即登录"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_235"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_14"
            />
        <Button
            android:id="@+id/register_zc"
            android:background="#ff72a1"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>
</LinearLayout>