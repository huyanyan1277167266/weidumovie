<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.MovieInfoActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:id="@+id/iv">
    </ImageView>
    <TextView
        android:layout_width="@dimen/dp_100"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/iv"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:text="评分："
        android:id="@+id/tvpf">
    </TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/iv"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:text="评论："
        android:layout_alignRight="@id/iv"
        android:layout_marginRight="50dp"
        android:id="@+id/tvpl">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="xxxxxxxx"
        android:layout_below="@id/iv"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:id="@+id/name">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="xxxxxxxx"
        android:layout_below="@id/name"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/time"
        android:layout_marginLeft="30dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="xxxxxxxx"
        android:layout_below="@id/time"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/di"
        android:layout_marginLeft="30dp">
    </TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/emptyheart"
        android:layout_below="@id/iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/heart">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="已关注"
        android:layout_below="@id/heart"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/yiguan"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:text="写影评"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:id="@+id/bu_write1">
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="选座购票"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:id="@+id/buy">
        </Button>
    </LinearLayout>
    <com.bw.movie.view.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/dl"
        android:background="#00ffffff"
        drawer:DrawerLayoutContent_ID="@+id/drawerContent"
      drawer:DrawerLayoutHandler_ID="@+id/drawerHandle"
       drawer:DrawerLayout_ID="@+id/drawer2"

        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/drawer2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:id="@+id/drawerHandle"
                android:src="@mipmap/shang"
                android:layout_centerHorizontal="true"
                android:paddingBottom="30dp"
                android:layout_marginBottom="6dp" />
            <LinearLayout
                android:id="@+id/drawerContent"
                android:layout_width="fill_parent"
                android:layout_height="700dp"

                android:layout_below="@+id/drawerHandle"
                android:background="#141931"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:text="复仇者联盟"
                    android:id="@+id/names"
                    android:gravity="center"
                    android:textColor="@android:color/white">
                </TextView>
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/tab"
                    android:background="#141931">
                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/vp">
                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:id="@+id/bu_write2"
                        android:text="写影评"
                        android:layout_weight="0"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:background="#e8be18"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="选座购票"
                        android:id="@+id/bt_butticket1"
                        android:layout_weight="0"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:background="#e8185e"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </com.bw.movie.view.DrawerLayout>
</RelativeLayout>