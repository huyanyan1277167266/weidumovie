<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.MovieInfoActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:id="@+id/iv">
    </ImageView>
    <TextView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp50"
        android:layout_alignBottom="@id/iv"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp30"
        android:text="评分："
        android:id="@+id/tv1">
    </TextView>
    <TextView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp50"
        android:layout_alignBottom="@id/iv"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp15"
        android:text="评论："
        android:layout_alignRight="@id/iv"
        android:layout_marginRight="@dimen/dp50"
        android:id="@+id/tv2">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:text="xxxxxxxx"
        android:layout_below="@id/iv"
        android:layout_marginLeft="@dimen/dp30"
        android:textSize="@dimen/sp16"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@android:color/white"
        android:id="@+id/name">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:text="xxxxxxxx"
        android:layout_below="@id/name"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/time"
        android:layout_marginLeft="@dimen/dp30">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:text="xxxxxxxx"
        android:layout_below="@id/time"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/di"
        android:layout_marginLeft="@dimen/dp30">
    </TextView>

    <ImageView
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:src="@mipmap/emptyheart"
        android:layout_below="@id/iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp20"
        android:id="@+id/heart">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:gravity="center"
        android:text="已关注"
        android:layout_below="@id/heart"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:id="@+id/guan"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp35">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/dp50">
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_weight="2"
          android:background="@color/yellow"
            android:text="写影评"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18"
            android:id="@+id/bu_write1">
        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_weight="3"
           android:background="@color/hongse"
            android:text="选座购票"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18"
            android:id="@+id/buy">
        </Button>
    </LinearLayout>
    <com.bw.movie.custom.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/dl"
        android:background="#00ffffff"
        drawer:DrawerLayoutContent_ID="@+id/drawerContent"
        drawer:DrawerLayoutHandler_ID="@+id/drawerHandle"
        drawer:DrawerLayout_ID="@+id/drawer2"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/drawer2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:id="@+id/drawerHandle"
                android:src="@mipmap/jiantou_shang"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/dp30"
                android:layout_marginBottom="6dp" />
            <LinearLayout
                android:id="@+id/drawerContent"
                android:layout_width="fill_parent"
                android:layout_height="700dp"

                android:layout_below="@+id/drawerHandle"
                android:background="@color/dark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:text="复仇者联盟"
                    android:id="@+id/names"
                    android:gravity="center"
                    android:textColor="@android:color/white">
                </TextView>
                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:id="@+id/tab"
                    drawer:tabTextColor="@android:color/white"
                    android:background="@color/dark">
                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/vp">
                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:id="@+id/bu_write2"
                        android:text="写影评"
                        android:layout_weight="0"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:background="#e8be18"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="选座购票"
                        android:id="@+id/bt_butticket1"
                        android:layout_weight="0"
                        android:textSize="14sp"
                        android:textColor="#fff"
                        android:background="#e8185e"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </com.bw.movie.custom.DrawerLayout>

</RelativeLayout>