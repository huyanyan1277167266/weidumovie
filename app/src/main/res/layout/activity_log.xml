<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_360"
    android:layout_height="@dimen/dp_640"
    android:orientation="vertical"
    tools:context=".activity.LogActivity">
    <LinearLayout
        android:background="@mipmap/back"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_0">

        <ImageView
            android:src="@mipmap/shape"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_47"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16" />
    </LinearLayout>
    <LinearLayout
        android:background="#141931"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/login_email"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="@drawable/edit_bg"
            android:paddingLeft="@dimen/dp_20"
            style="?android:attr/textViewStyle"
            android:hint="请输入邮箱账号"
            android:textColorHint="#ffffff"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44" />
        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <EditText
                android:inputType="textPassword"
                android:id="@+id/login_pwd"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:background="@drawable/edit_bg"
                android:paddingLeft="@dimen/dp_20"
                style="?android:attr/textViewStyle"
                android:hint="请输入密码"
                android:textColorHint="#ffffff"
                />
            <Button
                android:id="@+id/login_forget"
                android:layout_width="@dimen/dp_96"
                android:text="忘记密码"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"/>
        </LinearLayout>
        <TextView
            android:id="@+id/login_login"
            android:layout_marginTop="@dimen/dp_12"
            android:text="暂无账号 立即注册"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_235"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_14"
            />
        <Button
            android:id="@+id/login_dl"
            android:background="#ff72a1"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
            android:layout_width="@dimen/dp_93"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginLeft="@dimen/dp_73"
            android:layout_marginTop="@dimen/dp_29"></View>
            <TextView
                android:paddingLeft="@dimen/dp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"
                android:layout_marginTop="@dimen/dp_20"
                />
            <View
                android:layout_width="@dimen/dp_93"
                android:layout_height="2dp"
                android:background="#ffffff"

                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_29"></View>
        </LinearLayout>
        <ImageButton
            android:id="@+id/login_wechat"
            android:background="#50b674"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44"
           android:scaleType="center"
            android:src="@mipmap/weixin_copy_3"/>
    </LinearLayout>
    
   
</LinearLayout>